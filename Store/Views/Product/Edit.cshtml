@model ProductViewModel
@{
	ViewData["Title"] = "Edit";
}

<div asp-validation-summary="All">
</div>
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit @Model.Name Product</h2>

		<form asp-action="Edit" method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Brand</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Brand" />
					<span asp-validation-for="Brand" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Category</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="Category">
						<option value="Phones">Phones</option>
						<option value="Computers">Computers</option>
						<option value="Accessories">Accessories</option>
						<option value="Printers">Printers</option>
						<option value="Cameras">Cameras</option>
						<option value="Other">Other</option>
					</select>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Price" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Description" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

			<input asp-for="ImageFileName" hidden />
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="~/Files/Products/@Model.ImageFileName" width="150" />
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Image" />
					<span asp-validation-for="Image" class="text-danger"></span>
				</div>
			</div>

			<input type="submit" value="Submit" class="btn btn-primary" />
			<a asp-action="Index" class="btn btn-light">Back To List</a>
		</form>
	</div>
</div>


@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}
